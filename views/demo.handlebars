<div class="dish-card">
  <div class="dish-card-header">
    {{brand}}
  </div>
  <div class="card-body">
    <p>
      Campaign:
      {{campaign}}
    </p>
    <p>
      BA:
      {{ba_name}}
    </p>
    {{location}}
  </div>
</div>

